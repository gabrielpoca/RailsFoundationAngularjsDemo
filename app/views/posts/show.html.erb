<p id="notice"><%= notice %></p>

<div class="row">
	<div class="twelve columns">
		<h2>
			<%= @post.title %>
		</h2>
	</div>
</div>
<div class="row">
	<div class="twelve columns">
		by
		<%= @post.name %>
	</div>
</div>

<div class="row">
	<div class="twelve columns">
		<%= @post.content %>
	</div>
</div>

<div class="row">
	<div class="twelve columns">
		<h3>Comments</h3>
	</div>
</div>
<%= render @post.comments %>

<div class="row">
	<div class="twelve columns">
		<h3>Add a comment</h3>
	</div>
</div>
<%= render "comments/form" %>

<div class="row">
	<div class="twelve columns">
		<%= link_to 'Edit Post', edit_post_path(@post) %> |
		<%= link_to 'Back to Posts', posts_path %> |
	</div>
</div>