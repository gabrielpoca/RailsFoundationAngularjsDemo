<div class="row">
  <div class="twelve columns">
    <h1>Listing posts</h1>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Title</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="post in posts" id="post_{{post.id}}">
          <td>{{post.title}}</td>
          <td>{{post.name}}</td>
          <td><a href="#/posts/{{ post.id }}">Show</a></td>
          <td><a href="#/posts/edit/{{ post.id }}">Edit</td>
          <td><a href=" " ng-click="removePost(post.id)">Destroy</a></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
